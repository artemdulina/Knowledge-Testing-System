@using BLL.Entities
@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!--<link href="~/Content/Site.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/mainlayout.css" rel="stylesheet" type="text/css">-->
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/mainlayout")
    <!--<script src="~/Scripts/modernizr-2.6.2.js"></script>
        <script src="~/Scripts/jquery-3.1.0.min.js"></script>
        <script src="~/Scripts/bootstrap.min.js"></script>-->
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Pagination", false)
</head>

<body>
    <div class="navbar navbar-default navbar-fixed-top nav-bg-color">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">Knowledge Testing</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li id="timer" class="navbar-text">
                        <span class="hours clock-white"></span>
                        <span class="minutes clock-white"></span>
                        <span class="seconds clock-white"></span>
                    </li>

                    <li><a href="/home/about">About</a></li>
                    @{
                        if (!User.Identity.IsAuthenticated)
                        {
                            <li><a href="/account/login">Login</a></li>
                        }
                        else
                        {
                            <li class="dropdown ">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="color: white">
                                    @User.FirstName @User.LastName
                                    <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li class="dropdown-header">SETTINGS</li>
                                    @if (User.IsInRole(new[] { RoleType.Administrator }))
                                    {
                                        <li class=""><a href="/admin/index">Admin dashboard</a></li>
                                    }
                                    <li class=""><a href="#">Other Link</a></li>
                                    <li class=""><a href="#">Other Link</a></li>
                                    <li class="divider"></li>
                                    <li><a href="/account/logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <span>Copyright &copy; @DateTime.Now.Year Knowledge System. All rights reserved.</span>
    </footer>

</body>
</html>